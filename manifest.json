{
	"name": "Avian Network Wallet",
	"version": "0.0.1",
	"description": "Web wallet with web3 for Avian",
	"homepage_url": "https://avn.network/",
	"manifest_version": 2,
	"applications": {
		"gecko": {
			"id": "avian@alamshafil.github.io"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"storage",
		"webRequest",
		"unlimitedStorage",
		"clipboardWrite",
		"activeTab",
		"webRequest",
		"notifications"
	],
	"web_accessible_resources": [
		"wallet/index.html",
		"stream.js",
		"avian.js"
	],
	"content_scripts": [
		{
			"matches": [
				"file://*/*",
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"stream.js",
				"contentscript.js"
			],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	"background": {
		"page": "background.html"
	},
	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"32": "icon.png"
		},
		"default_title": "Avian Wallet",
		"default_popup": "wallet/index.html",
		"theme_icons": [
			{
				"light": "icon.png",
				"dark": "icon.png",
				"size": 32
			}
		]
	}
}